<div class="columns is-mobile mt-5">
  <div class="column is-half is-offset-one-quarter">
    <div class="field">
      <div class="control">
          <%= form_with model: [@warehouse, @comintent, @client], local: true do |f| %>
              <%= f.label "Име и Презиме", class:"label" %>
              <%= f.text_field :name, class:"input is-danger mb-2" %>
              <%= f.label "Регистрација", class:"label" %>
              <%= f.text_field :plate, class:"input is-danger mb-2" %>
              <%= f.label "Димензија", class:"label" %>
              <%= f.text_field :dimension, class:"input is-danger mb-2" %>
              <%= f.label "Бренд", class:"label" %>
              <%= f.text_field :brand, class:"input is-danger mb-2" %>
              <%= f.label "Количина", class:"label" %>
              <%= f.text_field :qty, class:"input is-danger mb-2" %>
              <%= f.label "Локација", class:"label" %>
              <%= f.text_field :location, class:"input is-danger mb-2" %>
            <div class="control"><%= f.submit "Внеси во база", class:"button is-danger" %>
            </div>

                          <% end %>


      </div>
    </div>
  </div>
</div>


