<h1>Users#new</h1>

<p>Find me in app/views/users/new.html.erb</p>
<%= form_with model: @user, local: true do |f| %>
<%= f.label "Корисник", class:"label" %>
<%= f.text_field :name, class:"input is-danger mb-2"  %>
<%= f.label "Лозинка", class:"label" %>
<%= f.password_field :password, class:"input is-danger mb-2" %>
<%= f.label "Повтори лозинка", class:"label" %>
<%= f.password_field :password_confirmation, class:"input is-danger mb-2" %>
<%= f.submit "Креирај корисник" %>
<% end %>

